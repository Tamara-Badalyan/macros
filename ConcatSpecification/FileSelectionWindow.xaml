<Window x:Class="ExcelFileSelector.FileSelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Select a File" Height="184" Width="261" BorderBrush="{DynamicResource {x:Static SystemColors.MenuBrushKey}}" Background="White">
	<Window.Style>
		<Style/>
	</Window.Style>
	<Grid Margin="0,0,35,0">
		<StackPanel Margin="10,20,10,18">
			<TextBlock Text="   Выберите файл для вставки:" Margin="0,0,0,10" RenderTransformOrigin="0.397,0.459"/>
			<ComboBox x:Name="FilesComboBox" Width="192" RenderTransformOrigin="-0.055,0.256"/>
			<Button Content="Подтвердить" Click="ConfirmSelection_Click" Width="90" HorizontalAlignment="Center" Margin="10"/>
		</StackPanel>
	</Grid>
</Window>